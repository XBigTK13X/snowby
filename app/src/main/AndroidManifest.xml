<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.simplepathstudios.snowby">

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:banner="@drawable/snowby_tv_banner"
            android:icon="@drawable/snowby_tv_banner"
            android:label="@string/app_name"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:logo="@drawable/snowby_tv_banner"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DetailsActivity" />
        <activity android:name=".activity.PlaybackActivity" />
        <activity android:name=".activity.BrowseErrorActivity" />
        <activity android:name=".activity.MediaLibraryActivity" />
    </application>

</manifest>